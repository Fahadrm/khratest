<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_common_form_view_inherited">
            <field name="name">product.template.common.view.form.inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']//group[@name='sale']" position="inside">
                    <group string="Restaurant Invoicing" name="restaurant_invoicing">
                        <field name="restaurant_invoice_pdct_type" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>